 <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" 
                    name="avatar_url" 
                    placeholder="http://" 
                    value="{{ member.avatar_url }}">
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>  
                    <input type="text" 
                    name="name" 
                    placeholder="Nome do Membro" 
                    value="{{ member.name }}">
                </div>
            </div>

               <div class="item">
                <div>Email</div>
                <div>  
                    <input type="email" 
                    name="email" 
                    placeholder="Seu email" 
                    value="{{ member.email }}">
                </div>
            </div>

            <div class="item">
                <div>Data de Aniversário</div>
                <div>
                    <input type="date" 
                    name="birth" 
                    value="{{ member.birth }}">
                </div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>
                    <span>
                        <input type="radio" 
                        name="gender" 
                        value="M"
                        {% if member.gender == 'M' %}
                        checked 
                        {% endif %}>Male</span>
                    <span>
                        <input type="radio" 
                        name="gender" 
                        value="F"
                        {% if member.gender == 'F' %}
                        checked 
                        {% endif %}>Female
                        </span>
                 </div>
            </div>

             <div class="item">
                <div>Tipo Sanguíneo</div>
                <div>
                    <select name="blood">
                    <option value="disabled">Selecione um tipo</option>
                        <option value="A+"
                        {% if member.blood == "A1" %}selected{% endif %}
                        >A+</option>
                        <option value="A-"
                        {% if member.blood == "A0" %}selected{% endif %}
                        >A-</option>
                        <option value="B+"
                        {% if member.blood == "B1" %}selected{% endif %}
                        >B+</option>
                        <option value="B-"
                        {% if member.blood == "B0" %}selected{% endif %}
                        >B-</option>
                        <option value="AB+"
                        {% if member.blood == "AB1" %}selected{% endif %}
                        >AB+</option>
                        <option value="AB-"
                        {% if member.blood == "AB0" %}selected{% endif %}
                        >AB-</option>
                        <option value="O+"
                        {% if member.blood == "O1" %}selected{% endif %}
                        >O+</option>
                        <option value="O-"
                        {% if member.blood == "O0" %}selected{% endif %}
                        >O-</option>
                    </select>
                </div>
            </div>

             <div class="item">
                <div>Peso (kg)</div>
                <div>
                    <input type="number" 
                    placeholder="Seu peso"
                    name="weight" 
                    value="{{ member.weight }}">
                </div>
            </div>

                <div class="item">
                <div>Altura (cm)</div>
                <div>
                    <input type="number" 
                    placeholder="Sua Altura"
                    name="height" 
                    value="{{ member.height }}">
                </div>
            </div>

        <div class="item">
            <div>Instrutor</div>
            <div>
                <select name="instructor">
                <option value="disabled">Selecione seu instrutor</option>
                    {% for instructor in instructorsOptions %}
                        <option value="{{instructor.id}}" {% if member.instructor_id == instructor.id %} selected="selected" {% endif %}>
                        {{instructor.name}}
                </option>
            {% endfor %}
        </select>
               
        </div>
    </div>
            <button type="submit">Salvar</button>