{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url({{instructor.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Novo Instrutor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input type="text" name="name" placeholder="Seu nome">
                </div>
            </div>

            <div class="item">
                <div>Data de Aniversário</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span>
                        <input type="radio" name="gender" value="M">Masculino</span>
                    <span>
                        <input type="radio" name="gender" value="F">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Área de Ocupação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe os serviços que você presta por vírgula">
                </div>
            </div>
                
            <button href="/instructors/{{ instructor.id }}/edit" type="submit">Salvar</button>

        </section>

    </form>

{% endblock content %}